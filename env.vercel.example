# Environment variables for Vercel deployment

# Google AI Configuration (Required)
GOOGLE_AI_GENERATIVE=your_google_ai_api_key_here

# Groq API settings (Required - FREE!)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1

# DeepSeek API Configuration (Optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# MongoDB Configuration (Optional - for full features)
MONGODB_URL=your_mongodb_atlas_connection_string_here

# Langfuse Configuration (Optional - for monitoring)
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Tavily API Configuration (Optional - for web search)
TAVILY_API_KEY=your_tavily_api_key

# Application Configuration
APP_TITLE=AI Chatbot
APP_VERSION=1.0.0
DEBUG=false
